{
	"manifest_version": 2,
	"name": "アイマスDBキーワードフィルター",
	"description": "アイマスDBの番組表で指定したキーワード(声優名など)で絞り込む",
	"version": "2.0.0",
	"minimum_chrome_version": "88",
	"icons": {
		"128": "icon.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://imas-db.jp/*"
			],
			"js": [
				"dist/hidden.js"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"https://imas-db.jp/*"
			],
			"js": [
				"dist/main.js"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	],
	"options_ui": {
		"chrome_style": false,
		"open_in_tab": true,
		"page": "options/build/"
	},
	"permissions": [
		"storage",
		"https://imas-db.jp/*"
	]
}